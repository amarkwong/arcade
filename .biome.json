{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"indentWidth": 2,
		"lineWidth": 100
	},
	"linter": {
		"enabled": true
	},
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": [
			"**/node_modules/**",
			"**/.next/**",
			"**/.vercel/**",
			"**/.turbo/**",
			"**/build/**",
			"**/dist/**",
			"**/coverage/**",
			"**/.cache/**"
		]
	},
	"vcs": {
		"enabled": true,
		"client": "git"
	}
}
