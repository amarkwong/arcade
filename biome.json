{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"indentWidth": 2,
		"lineWidth": 100
	},
	"linter": {
		"enabled": true
	},
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"include": [
			"apps/web/src/**",
			"apps/web/tests/**",
			"apps/web/drizzle.config.ts",
			"apps/web/playwright.config.ts",
			"packages/**",
			"*.json",
			"*.md"
		],
		"ignore": [
			"**/node_modules/**",
			"**/.next/**",
			"apps/web/.next/**",
			"**/.vercel/**",
			"**/.turbo/**",
			"**/build/**",
			"**/dist/**",
			"**/coverage/**",
			"**/.cache/**"
		]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	}
}
